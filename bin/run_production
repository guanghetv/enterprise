#!/usr/bin/env bash

NODE_BIN=`which node`
NODE_LOCK=/tmp/enterprise.lock
NODE_APP=/Users/Lsong/Documents/projects/enterprise/app.js

if [ -f $NODE_LOCK ]; then
	echo "enterprise already running , exit 0"
	exit 0
fi

echo "start enterprise"

touch $NODE_LOCK

NODE_ENV=production $NODE_BIN $NODE_APP

rm $NODE_LOCK

echo "done"
